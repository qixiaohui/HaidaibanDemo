<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"

    android:padding="8dp" >

    <!-- Thumbnail Image -->
    <ImageView
        android:id="@+id/img_ls_tempoffer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:background="@color/gray"
        android:layout_marginRight="8dp" />

    <!-- Item Title -->
    <TextView
        android:id="@+id/ls_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignTop="@+id/img_ls_tempoffer"
        android:layout_toRightOf="@+id/img_ls_tempoffer"
        android:textSize="@dimen/medium_text_size"
        android:textStyle="bold" />

    <!-- number -->
    <TextView
        android:id="@+id/ls_item_num"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/category"
        android:textSize="@dimen/micro_text_size"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_ls_tempoffer"
        android:layout_toEndOf="@+id/img_ls_tempoffer" />

    <!-- item type -->
    <TextView
        android:id="@+id/ls_item_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ls_item_num"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/img_ls_tempoffer"
        android:textColor="@color/category"
        android:textSize="@dimen/micro_text_size" />

    <!-- image button  -->
    <ImageView
        android:id="@+id/btn_tempoffer_del"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/gray"
        android:layout_alignBottom="@+id/img_ls_tempoffer"
        android:layout_alignRight="@+id/ls_item_type"
        android:layout_alignEnd="@+id/ls_item_type" />

    <ImageView
        android:id="@+id/btn_tempoffer_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/gray"
        android:layout_alignTop="@+id/btn_tempoffer_del"
        android:layout_toLeftOf="@+id/btn_tempoffer_del"
        android:layout_toStartOf="@+id/btn_tempoffer_del"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />


</RelativeLayout>