<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:id="@+id/upperRow"
    android:orientation="vertical"
    android:layout_width="fill_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
    <TextView
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:textSize="12sp"
        android:gravity="center"
        android:paddingRight="5dp"
        android:layout_weight="0.7"
        android:id="@+id/orderState" />
    <TextView
        android:layout_height="fill_parent"
        android:textColor="@color/grey"
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="12sp"
        android:layout_weight="2"
        android:id="@+id/orderNumber" />
    <TextView
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/orderTime" />
    </LinearLayout>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/upperRow"
        android:layout_width="fill_parent">
        <ImageView
            android:layout_margin="10dp"
            android:layout_height="120dp"
            android:layout_width="120dp"
            android:id="@+id/orderImage" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/dealName"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/orderImage"
            android:textStyle="bold" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/remainTime"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_marginRight="20dp"
            android:textColor="@color/grey"
            android:layout_toRightOf="@id/orderImage"
            android:layout_below="@id/dealName" />
        <ImageView
            android:layout_marginTop="50dp"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right"
            android:layout_alignRight="@id/dealName" />
    </RelativeLayout>
</LinearLayout>