<!--Title bar -->
    <RelativeLayout
        android:id="@+id/personal_top_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/white" >
        <ImageButton
            android:id="@+id/btn_back_titlebar"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@drawable/background_corners"

            >

        </ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/goodstitle_pricefill"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text_size"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
             />

        <ImageButton
            android:id="@+id/btn_title_photo"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@drawable/background_corners"

            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_user_icon_bg"
            android:src="@drawable/login_user_default_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/btn_title_photo"
            android:layout_alignStart="@+id/btn_title_photo" />
    </RelativeLayout>



