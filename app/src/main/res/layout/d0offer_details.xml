<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/gray"></LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/whitesmoke">

            <TextView
                android:id="@+id/tx_title"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/d1_orderstatus"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/small_text_size"></TextView>

            <!-- 状态图-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <!-- 上下俩部分-->
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:orientation="horizontal"

                    >

                    <View
                        android:id="@+id/view_status0"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@color/skyblue"></View>

                    <View
                        android:id="@+id/view_status1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/gray"
                        android:layout_gravity="center"

                        ></View>

                    <View
                        android:id="@+id/view_status2"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/gray"
                        android:layout_gravity="center"

                        ></View>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"

                    >

             <TextView
                 android:id="@+id/tx_d1_status0"
                 android:layout_height="wrap_content"
                 android:layout_width="0dp"
                 android:layout_weight="1.40"
                 android:text="@string/d1_status0"
                 android:textSize="@dimen/small_text_size"


                 ></TextView>
                    <TextView
                        android:id="@+id/tx_d1_status1"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1.44"
                        android:text="@string/d1_status1"
                        android:textSize="@dimen/small_text_size"

                        ></TextView>
                    <TextView
                        android:id="@+id/tx_d1_status2"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/d1_status2"
                        android:textSize="@dimen/small_text_size"


                        ></TextView>

                    <TextView
                        android:id="@+id/tx_d1_status3"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="0.75"
                        android:text="@string/d1_status3"
                        android:textSize="@dimen/small_text_size"
                        android:gravity="right"

                        ></TextView>





                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <!-- 分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/whitesmoke"></LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/whitesmoke"></LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/whitesmoke"></LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"></View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/whitesmoke">

            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn_1"
                android:background="@color/blue"></Button>

            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn_2"
                android:background="@color/green"></Button>

            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn_3"
                android:background="@color/yellow"></Button>

            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn_4"></Button>

            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn_5"
                android:background="@color/pink"></Button>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>