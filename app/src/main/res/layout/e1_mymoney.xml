<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ECECEC"
    >
    <!-- 第一部分-->
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:background="#FFB107"
        android:orientation="vertical">
        <!-- 资金总额-->
        <TextView
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:layout_weight="0.3"
            android:text="@string/cashsum"
            android:textSize="@dimen/medium_text_size"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            ></TextView>
        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:text="@string/money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="@dimen/large_text_size"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                ></TextView>
            <HorizontalScrollView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                >
            <TextView
                android:text="@string/cashnumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="60sp"
                android:gravity="left"
                android:layout_weight="2.50"></TextView>

                </HorizontalScrollView>
        </LinearLayout>
         <View
             android:layout_height="0dp"
             android:layout_weight="0.3"
             android:layout_width="10dp"
             android:layout_marginBottom="5dp"
             android:layout_marginRight="10dp"
             ></View>


        </LinearLayout>
    <!-- 第二部分-->
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <!-- 提现-->
        <TextView
            android:id="@+id/tv_cash_out"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:text="@string/cashout"
            android:textColor="#98979D"
            android:textSize="@dimen/large_text_size"
            android:gravity="center"
            ></TextView>
        <View
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:layout_width="0dp"
            android:background="#ECECEC"
            />
        <TextView
            android:id="@+id/tv_cash_in"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:text="@string/cashin"
            android:textColor="#98979D"
            android:textSize="@dimen/large_text_size"
            android:gravity="center"
            ></TextView>

    </LinearLayout>
    <View
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        />
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/myredcash"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/medium_text_size"

            android:textColor="#7F7F7F"
            ></TextView>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.36"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:src="@drawable/accsessory_arrow_right" />

    </LinearLayout>
    <View
    android:layout_height="0dp"
    android:layout_weight="0.06"
    android:layout_width="match_parent"
    />
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:background="@color/white"
        >
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/mycoupon"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/medium_text_size"
            android:textColor="#7F7F7F"
            ></TextView>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.36"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:src="@drawable/accsessory_arrow_right" />


    </LinearLayout>
    <View
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        />
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:background="@color/white"
        >
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/mymoneypassword"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/medium_text_size"
            android:textColor="#7F7F7F"
            ></TextView>
        <ImageView
        android:layout_width="0dp"
        android:layout_weight="0.36"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:src="@drawable/accsessory_arrow_right" />
    </LinearLayout>



    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        />
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        />

</LinearLayout>